<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Start the global timer-->
    <type name="Magento\Framework\App\Http">
        <plugin name="smile-debugtoolbar-app-http-plugin" type="Smile\DebugToolbar\Plugin\App\Http" sortOrder="1" disabled="false"/>
    </type>

    <!-- Get the classname of the current action -->
    <type name="Magento\Framework\App\Action\AbstractAction">
        <plugin name="smile-debugtoolbar-app-action-plugin" type="Smile\DebugToolbar\Plugin\App\Action\AbstractAction" sortOrder="1" disabled="false"/>
    </type>

    <!-- Stats on cache usage -->
    <type name="Magento\Framework\App\CacheInterface">
        <plugin name="smile-debugtoolbar-app-cache-plugin" type="Smile\DebugToolbar\Plugin\App\Cache" sortOrder="1" disabled="false"/>
    </type>

    <!-- Stats on event manager (unused events) -->
    <type name="Magento\Framework\Event\ManagerInterface">
        <plugin name="smile-debugtoolbar-event-manager-plugin" type="Smile\DebugToolbar\Plugin\Event\Manager" sortOrder="1" disabled="false"/>
    </type>

    <!-- Stats on event invoker (used events) -->
    <type name="Magento\Framework\Event\InvokerInterface">
        <plugin name="smile-debugtoolbar-event-invoker-plugin" type="Smile\DebugToolbar\Plugin\Event\Invoker" sortOrder="1" disabled="false"/>
    </type>
</config>
