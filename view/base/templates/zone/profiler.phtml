use Smile\DebugToolbar\Block\Zone\Profiler;

/** @var Profiler $block */
$timers = $block->getTimers();
?>
<table class="st-profiler">
    <colgroup>
        <col style="width: 50%"/>
        <col style="width: 14%"/>
        <col style="width: 14%"/>
        <col style="width: 8%"/>
        <col style="width: 14%"/>
    </colgroup>
    <thead>
    <tr>
        <th>Timer</th>
        <td>Total</td>
        <td>AVG</td>
        <td>NB</td>
        <td>Mem</td>
    </tr>
    </thead>
    <tbody>
    <?php
    foreach ($timers as $timer) :
        $row = [
            'sum' => $block->formatValue($timer['sum'], [], 'time'),
            'avg' => $block->formatValue($timer['avg'], ['gt' => 3], 'time'),
            'count' => $block->formatValue($timer['count'], [], 'number'),
            'mem' => $block->formatValue($timer['mem'], [], 'size_mo'),
        ];
        ?>
        <tr
            id="<?= $block->escapeHtmlAttr($block->getToolbarId()) ?>-pf-<?= $block->escapeHtmlAttr($timer['uid']) ?>"
            class="<?= ($timer['parent'] ? $block->escapeHtmlAttr($block->getToolbarId()) . '-pf-' . $block->escapeHtmlAttr($timer['parent']) : '') ?>"
            style="<?= ($timer['parent'] ? 'display: none' : '') ?>"
        >
            <td
                style="padding-left: <?= (10 * $timer['level']) ?>px"
                class="<?= (($timer['children'] > 0) ? 'st-with-children' : '') ?>"
            >
                <?php if ($timer['children'] > 0) : ?>
                    <span
                        class="st-expand"
                        id="<?= $block->escapeHtmlAttr($block->getToolbarId()) ?>-pf-<?= $block->escapeHtmlAttr($timer['uid']) ?>-span"
                        onclick="smileToolbarTreeGrid(this)"
                    >+</span>
                <?php else : ?>
                    <span
                        class="st-expand"
                    >&nbsp;</span>
                <?php endif ?>
                <?= $block->escapeHtml($timer['label']) ?>
            </td>
            <td class="<?= $block->escapeHtmlAttr($row['sum']['css_class']) ?>">
                <div class="st-percent" style="width: <?= $block->escapeCss($timer['percent']) ?>%"></div>
                <?= $block->escapeHtml($row['sum']['value']) ?>
            </td>
            <td class="<?= $block->escapeHtmlAttr($row['avg']['css_class']) ?>"><?= $block->escapeHtml($row['avg']['value']) ?></td>
            <td class="<?= $block->escapeHtmlAttr($row['count']['css_class']) ?>"><?= $block->escapeHtml($row['count']['value']) ?></td>
            <td class="<?= $block->escapeHtmlAttr($row['mem']['css_class']) ?>"><?= $block->escapeHtml($row['mem']['value']) ?></td>
        </tr>
    <?php endforeach ?>
    </tbody>
</table>
<?php
$buildIn = $block->formatValue($block->getHelperData()->getTimer('profiler_build'), ['gt' => 3], 'time');
?>
<div class="st-footer">
    <?= count($timers) ?> timers builded in
    <span class="<?= $block->escapeHtmlAttr($buildIn['css_class']) ?>">
        <?= $block->escapeHtml($buildIn['value']) ?>
    </span>
</div>
