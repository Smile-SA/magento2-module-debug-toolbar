use Smile\DebugToolbar\Block\Toolbar;

/** @var Toolbar $block */
$zones = $block->getZones();

$toolbarId = $block->getToolbarId();
?>
<div class="smile-toolbar" id="<?= $block->escapeHtmlAttr($toolbarId) ?>-toolbar">
    <div
        class="st-zones"
        id="<?= $block->escapeHtmlAttr($toolbarId) ?>-zones"
        onclick="smileToolbarMainToggle();"
    >
        <?php foreach ($zones as $zone) : ?>
            <?php $zoneHtml = $zone->toHtml() ?>
            <div
                id="<?= $block->escapeHtmlAttr($toolbarId) ?>-zone-<?= $block->escapeHtmlAttr($zone->getCode()) ?>"
                class="st-zone"
                onclick="event.stopPropagation();"
            >
                <div class="st-title">
                    <div class="st-table-links">
                        <?php foreach ($zone->getTablesToDisplay() as $key => $table) : ?>
                            <?= ($key > 0 ? '|' : '') ?>
                            <a onclick="<?= $block->escapeHtmlAttr($table['onclick']) ?>">
                                <?= $block->escapeHtml($table['label']) ?>
                            </a>
                        <?php endforeach ?>
                    </div>
                    <h1><?= $block->escapeHtml($zone->getTitle()) ?></h1>
                </div>
                <div class="st-content">
                    <?= /* @noEscape */ $zoneHtml ?>
                </div>
            </div>
        <?php endforeach ?>
        <div
            class="st-navigator"
            onclick="event.stopPropagation();"
            id="<?= $block->escapeHtmlAttr($toolbarId) ?>-navigator"
        >
            Smile Toolbar Navigator - Loading
        </div>
    </div>
    <div class="st-titles" id="<?= $block->escapeHtmlAttr($toolbarId) ?>-titles">
        <div
            id="<?= $block->escapeHtmlAttr($toolbarId) ?>-close"
            class="st-close"
            onclick="smileToolbarMainToggle();"
        ></div>
        <?php foreach ($zones as $zone) : ?>
            <span
                    id="<?= $block->escapeHtmlAttr($toolbarId) ?>-title-<?= $block->escapeHtmlAttr($zone->getCode()) ?>"
                    class="<?= ($zone->isWarning() ? 'value-warning' : '') ?>"
                    onclick="smileToolbarZoneSelect('<?= $block->escapeHtmlAttr($zone->getCode()) ?>');"
            >
                <?= $block->escapeHtml($zone->getTitle()) ?>
            </span>
        <?php endforeach ?>
    </div>
    <div class="st-logo <?= ($block->isWarning() ? 'box-warning' : '') ?>" onclick="smileToolbarMainToggle();">
        Smile ToolBar
    </div>
</div>
<script type="text/javascript">
    smileToolbarAdd('<?= $block->escapeHtmlAttr($toolbarId) ?>', <?= ($block->isWarning() ? 'true' : 'false') ?>);
</script>
